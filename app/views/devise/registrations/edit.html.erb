  <div class="card-body">
    <p class="card-title">Unhappy?</p>
    <p class="card-text"><%= button_to "Cancel my account",  registration_path(resource_name), data: { confirm: "Are you sure you want to delete your account?" }, method: :delete, class:'btn btn-secondary' %></p>
  </div>
</div>




